@{
    ViewData["Title"] = "Alta Cliente";
}

<h1>@ViewData["Title"]</h1>
<form action="Alta" method="post">
  <div class="row mb-3">
    <label for="Nom" class="col-sm-2 col-form-label">Nombre</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="Nom" placeholder="Nombre del cliente" name="nombre">
    </div>
  </div>
  <div class="row mb-3">
    <label for="Dir" class="col-sm-2 col-form-label">Dirección</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="Dir" placeholder="Dirección del cliente" name=direccion>
    </div>
  </div>
  <div class="row mb-3">
    <label for="RefD" class="col-sm-2 col-form-label">Referencia Dirección: </label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="Dir" placeholder="Referencia de la dirección del cliente" name=direccion>
    </div>
  </div>
  <div class="row mb-3">
    <label for="Tel" class="col-sm-2 col-form-label">Teléfono</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="Tel" name="telefono" placeholder="Teléfono del cliente" max="4294967295">
    </div>
  </div>
   <button type="submit" class="btn btn-primary">Cargar</button>
   <button type="reset" class="btn btn-primary">Limpiar</button>
</form>