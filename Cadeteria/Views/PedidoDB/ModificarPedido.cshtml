@model ModificarPedidoViewModel 
@{
    ViewData["Title"] = "Modificar Pedido";
}

<h1>@ViewData["Title"]</h1>
<form asp-action="ConfirmarModificadoPedido" method="post">
    <div class="row mb-3">
    <label for="Num" class="col-sm-2 col-form-label" asp-for="Numero">id: @Model.Numero</label>
        <div class="col-sm-10">
            <input type="hidden" class="form-control" id="Numero" name="Num" asp-for="Numero" value="@Model.Numero">
        </div>
    </div>
    <div class="row mb-3">
    <label for="Obs" class="col-sm-2 col-form-label" asp-for="Observacion">Observaci√≥n: </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Obs" name="Observacion" asp-for="Observacion" value="@Model.Observacion">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Confirmar</button>
    <button type="reset" class="btn btn-primary">Reiniciar</button>
</form>