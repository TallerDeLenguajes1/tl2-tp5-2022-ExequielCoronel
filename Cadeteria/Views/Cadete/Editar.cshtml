@model Cadete;
@{
    ViewData["Title"] = "Alta Cadete";
}

<h1>@ViewData["Title"]</h1>
<form action="ConfirmarEditado" method="post">
  <div class="row mb-3"> 
    <label for="Id" class="col-sm-2 col-form-label">ID @Model.ID</label>
    <div class="col-sm-10">
        <input type="hidden" class="form-control" id="Id" name="id" value="@Model.ID">
    </div>
  </div>
  <div class="row mb-3">
    <label for="Nom" class="col-sm-2 col-form-label">Nombre</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="Nom" placeholder="Nombre del cadete" name="nombre" value="@Model.Nombre">
    </div>
  </div>
  <div class="row mb-3">
    <label for="Dir" class="col-sm-2 col-form-label">Dirección</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="Dir" placeholder="Dirección del cadete" name=direccion value="@Model.Direccion">
    </div>
  </div>
  <div class="row mb-3">
    <label for="Tel" class="col-sm-2 col-form-label">Teléfono</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="Tel" name="telefono" placeholder="Teléfono del cadete" max="4294967295" value="@Model.Telefono">
    </div>
  </div>
   <button type="submit" class="btn btn-primary">Cargar</button>
   <button type="reset" class="btn btn-primary">Reiniciar</button>
</form>